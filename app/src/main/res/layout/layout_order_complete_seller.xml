<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- Merchant Information -->
        <LinearLayout
            android:id="@+id/merchantInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/merchantStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Veggie Official"
                android:textColor="#1A4D2E"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/preferred"
                android:text="Preferred"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:padding="3dp" />

        </LinearLayout>

        <!-- Product Image -->
        <androidx.cardview.widget.CardView
            android:id="@+id/productImageCard"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/merchantInfo"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person" />
        </androidx.cardview.widget.CardView>

        <!-- Product Details -->

        <!-- Price and Button -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/merchantInfo"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:layout_toEndOf="@id/productImageCard"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olive Shampoo"
                android:textColor="#1A4D2E"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/productQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="1x"
                android:textColor="#1A4D2E"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/productDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For Dogs and Cats"
                android:textColor="#1A4D2E"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="₱500.00"
                android:textColor="#D0A642"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productImageCard"
            android:layout_margin="20dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderStatusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Order:"
                android:textColor="#164863"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/TotalOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱200"
                android:textColor="#D0A642"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>



