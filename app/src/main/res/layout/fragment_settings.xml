<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SettingsFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/farmnookcolor"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="675dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="140dp"
                android:background="@drawable/bg_lightgreencorners">

                <LinearLayout
                    android:id="@+id/linearLayout12"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pfpName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_reg"
                        android:textColor="#1A4D2E"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_reg"
                        android:textColor="#1A4D2E"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout12"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="41dp"
                    android:layout_marginBottom="105dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">

                    <Button
                        android:id="@+id/editpfpbtn"
                        android:layout_width="290dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_btnseetings"
                        android:drawableLeft="@drawable/ic_editprof"
                        android:paddingHorizontal="65dp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/dmsans_reg"
                        android:textStyle="bold"
                        android:text="Edit Profile"
                        android:textAlignment="center"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/aboutbtn"
                        android:layout_width="290dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_btnseetings"
                        android:backgroundTint="@color/btnpmain"
                        android:drawableLeft="@drawable/ic_info"
                        android:paddingHorizontal="65dp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/dmsans_reg"
                        android:textStyle="bold"
                        android:text="About Pawsitive Vibes"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/signoutbtn"
                        android:layout_width="290dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_btnseetings"
                        android:backgroundTint="@color/btnpmain"
                        android:drawableLeft="@drawable/ic_exit"
                        android:paddingHorizontal="65dp"
                        android:textAllCaps="false"
                        android:fontFamily="@font/dmsans_reg"
                        android:textStyle="bold"
                        android:text="Sign Out"
                        android:textColor="#ffffff" />

                </LinearLayout>
            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myCircleImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_person"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="390dp" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>