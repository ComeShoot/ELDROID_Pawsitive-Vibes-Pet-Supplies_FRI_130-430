<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notification_background"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/notification_background"
        android:padding="8dp">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Product image"
            android:src="@drawable/ic_product"
            app:layout_constraintBottom_toTopOf="@+id/bot1"
            app:layout_constraintEnd_toStartOf="@+id/side1"
            app:layout_constraintStart_toStartOf="@+id/side2"
            app:layout_constraintTop_toTopOf="@+id/top1" />

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Title"
            android:textColor="#164863"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/top2"
            app:layout_constraintStart_toStartOf="@+id/side1"
            app:layout_constraintTop_toTopOf="@+id/top1" />

        <TextView
            android:id="@+id/itemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:45 PM"
            android:textColor="#6E7A8A"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/bot1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/side3"
            app:layout_constraintTop_toTopOf="@+id/top1" />

        <TextView
            android:id="@+id/itemMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parcel has departed from sorting facility"
            android:textColor="#6E7A8A"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/bot1"
            app:layout_constraintEnd_toStartOf="@+id/side3"
            app:layout_constraintStart_toStartOf="@+id/side1"
            app:layout_constraintTop_toTopOf="@+id/top2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/side1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.13" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/side3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.83" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/side2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.0" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".40" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
