<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EditProfileActivity">

    <LinearLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back" />


    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_reg"
            android:text="Edit Profile"
            android:textColor="#164863"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout2"
        android:layout_width="match_parent"
        android:layout_marginTop="90dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_lightgreencorners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout4"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myProfPic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <!-- New ImageButton for editing profile picture -->
            <ImageButton
                android:id="@+id/editProfPicBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="-40dp"
                android:background="@drawable/ic_addprod"
                android:contentDescription="Edit Profile Picture" />


            <TextView
                android:id="@+id/pfpName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:fontFamily="@font/poppins_reg"
                android:text="Name"
                android:textColor="#164863"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="190dp"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:fontFamily="@font/dmsans_reg"
                    android:gravity="center"
                    android:text="Full Name"
                    android:textColor="#A6A6A6"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/UsernameEditText"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_edittext_background"
                    android:backgroundTint="#DDF2FD"
                    android:fontFamily="@font/dmsans_reg"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:textColor="#164863"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/emailtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:fontFamily="@font/dmsans_reg"
                    android:gravity="center"
                    android:text="Email"
                    android:textColor="#A6A6A6"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_edittext_background"
                    android:backgroundTint="#DDF2FD"
                    android:textColor="#164863"
                    android:fontFamily="@font/dmsans_reg"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/mobiletxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:fontFamily="@font/dmsans_reg"
                    android:gravity="center"
                    android:text="Mobile Number"
                    android:textColor="#A6A6A6"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_edittext_background"
                    android:backgroundTint="#DDF2FD"
                    android:fontFamily="@font/dmsans_reg"
                    android:gravity="center"
                    android:inputType="phone"
                    android:textColor="#164863"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/locationtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:fontFamily="@font/dmsans_reg"
                    android:gravity="center"
                    android:text="Location"
                    android:textColor="#A6A6A6"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/location"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_edittext_background"
                    android:backgroundTint="#DDF2FD"
                    android:fontFamily="@font/dmsans_reg"
                    android:gravity="center"
                    android:inputType="textPostalAddress"
                    android:textColor="#164863"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/datetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:fontFamily="@font/dmsans_reg"
                    android:gravity="center"
                    android:text="Date of Birth"
                    android:textColor="#A6A6A6"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/dob"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_edittext_background"
                    android:backgroundTint="#DDF2FD"
                    android:fontFamily="@font/dmsans_reg"
                    android:gravity="center"
                    android:inputType="date"
                    android:textColor="#164863"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/Confirm"
                    android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="@color/btn2"
                    android:fontFamily="@font/dmsans_reg"
                    android:gravity="center"
                    android:text="Confirm"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </LinearLayout>
        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
