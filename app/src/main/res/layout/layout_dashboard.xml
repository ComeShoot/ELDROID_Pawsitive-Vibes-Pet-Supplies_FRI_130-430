<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Vertical Guideline for consistent margins -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="198dp" />

        <!-- Product Image -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/verticalGuideline"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/ic_addimage" />

        <!-- Quantity Text -->
        <TextView
            android:id="@+id/productQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/poppins_reg"
            android:text="x45"
            android:textColor="#8C8C8C"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/productImage"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Product Title -->
        <TextView
            android:id="@+id/productTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_reg"
            android:text="Olive Shampoo"
            android:textColor="#164863"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/productImage"
            app:layout_constraintStart_toEndOf="@+id/productImage"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Product Description -->
        <TextView
            android:id="@+id/productDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_reg"
            android:text="For Dogs and Cats"
            android:textColor="#8C8C8C"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/productTitle"
            app:layout_constraintStart_toStartOf="@+id/productTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Product Price -->
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_reg"
            android:text="â‚±500"
            android:textColor="#D0A642"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/productDescription"
            app:layout_constraintStart_toStartOf="@+id/productDescription" />

        <!-- Remove Button -->
        <ImageView
            android:id="@+id/removeButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_removes"
            android:contentDescription="Remove Button"
            app:layout_constraintWidth_percent="0.12"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/moreOptionsButton" />

        <!-- More Options Button -->
        <ImageView
            android:id="@+id/moreOptionsButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_mores"
            android:contentDescription="More Options"
            app:layout_constraintWidth_percent="0.12"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
